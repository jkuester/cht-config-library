<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:cht="https://communityhealthtoolkit.org">
  <h:head>
    <h:title>Register Case</h:title>
    <model odk:xforms-version="1.0.0">
      <itext>
        <translation lang="English (en)">
          <text id="/data/inputs/source:label">
            <value>Source</value>
          </text>
          <text id="/data/inputs/contact:label">
            <value>Contact</value>
          </text>
          <text id="/data/inputs/contact/_id:label">
            <value>Select person</value>
          </text>
          <text id="/data/inputs/contact/name:label">
            <value>Name</value>
          </text>
          <text id="/data/submit:label">
            <value> Submitting this form will create a new case that will automatically be associated with <output value=" /data/inputs/contact/name "/>'s parent.</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="register_case" version="20250214130852" prefix="J1!register_case!" delimiter="#">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <contact>
              <_id/>
              <name/>
            </contact>
          </inputs>
          <patient_uuid/>
          <submit/>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <instance id="contact-summary"/>
      <instance id="user-contact-summary"/>
      <bind nodeset="/data/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/data/inputs/source" type="string"/>
      <bind nodeset="/data/inputs/contact/_id" type="string" required="true()"/>
      <bind nodeset="/data/inputs/contact/name" type="string"/>
      <bind nodeset="/data/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/data/submit" readonly="true()" type="string"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/inputs">
      <input ref="/data/inputs/source" appearance="hidden">
        <label ref="jr:itext('/data/inputs/source:label')"/>
      </input>
      <group ref="/data/inputs/contact">
        <label ref="jr:itext('/data/inputs/contact:label')"/>
        <input ref="/data/inputs/contact/_id" appearance="select-contact type-person">
          <label ref="jr:itext('/data/inputs/contact/_id:label')"/>
        </input>
        <input ref="/data/inputs/contact/name" appearance="hidden">
          <label ref="jr:itext('/data/inputs/contact/name:label')"/>
        </input>
      </group>
    </group>
    <input ref="/data/submit">
      <label ref="jr:itext('/data/submit:label')"/>
    </input>
  </h:body>
</h:html>