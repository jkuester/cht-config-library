<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:cht="https://communityhealthtoolkit.org">
  <h:head>
    <h:title>Contact Summary Test</h:title>
    <model odk:xforms-version="1.0.0">
      <itext>
        <translation lang="English (en)">
          <text id="/data/my_page/favorite_note:label">
            <value> Favorite CHW: <output value=" /data/my_page/favorite_chw_name "/> – Visits: <output value=" /data/my_page/favorite_chw_hh_visits "/> – Referrals: <output value=" /data/my_page/favorite_chw_referrals "/></value>
          </text>
          <text id="/data/my_page/my_repeat:label">
            <value>All CHWs:</value>
          </text>
          <text id="/data/my_page/my_repeat/repeated_note:label">
            <value><output value=" ../chw_name "/> – Visits: <output value=" ../chw_household_visit "/> – Referrals: <output value=" ../chw_referral "/></value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="with_contact_summary" version="20250213162757" prefix="J1!with_contact_summary!" delimiter="#">
          <my_page>
            <favorite_chw_name/>
            <favorite_chw_hh_visits/>
            <favorite_chw_referrals/>
            <favorite_note/>
            <chw_names/>
            <chw_household_visits/>
            <chw_referrals/>
            <chw_count/>
            <my_repeat jr:template="">
              <chw_index/>
              <chw_name/>
              <chw_household_visit/>
              <chw_referral/>
              <repeated_note/>
            </my_repeat>
          </my_page>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <instance id="contact-summary"/>
      <instance id="user-contact-summary"/>
      <bind nodeset="/data/my_page/favorite_chw_name" type="string" calculate="instance('contact-summary')/context/favorite_chw/name"/>
      <bind nodeset="/data/my_page/favorite_chw_hh_visits" type="string" calculate="instance('contact-summary')/context/favorite_chw/household_visits"/>
      <bind nodeset="/data/my_page/favorite_chw_referrals" type="string" calculate="instance('contact-summary')/context/favorite_chw/referrals"/>
      <bind nodeset="/data/my_page/favorite_note" readonly="true()" type="string"/>
      <bind nodeset="/data/my_page/chw_names" type="string" calculate="instance('contact-summary')/context/all_chws/chw_names"/>
      <bind nodeset="/data/my_page/chw_household_visits" type="string" calculate="instance('contact-summary')/context/all_chws/chw_household_visits"/>
      <bind nodeset="/data/my_page/chw_referrals" type="string" calculate="instance('contact-summary')/context/all_chws/chw_referrals"/>
      <bind nodeset="/data/my_page/chw_count" type="string" calculate="count-selected( /data/my_page/chw_names )"/>
      <bind nodeset="/data/my_page/my_repeat/chw_index" type="string" calculate="position(..) - 1"/>
      <bind nodeset="/data/my_page/my_repeat/chw_name" type="string" calculate="selected-at( /data/my_page/chw_names ,  ../chw_index )"/>
      <bind nodeset="/data/my_page/my_repeat/chw_household_visit" type="string" calculate="selected-at( /data/my_page/chw_household_visits ,  ../chw_index )"/>
      <bind nodeset="/data/my_page/my_repeat/chw_referral" type="string" calculate="selected-at( /data/my_page/chw_referrals ,  ../chw_index )"/>
      <bind nodeset="/data/my_page/my_repeat/repeated_note" readonly="true()" type="string"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/my_page">
      <input ref="/data/my_page/favorite_note">
        <label ref="jr:itext('/data/my_page/favorite_note:label')"/>
      </input>
      <group ref="/data/my_page/my_repeat">
        <label ref="jr:itext('/data/my_page/my_repeat:label')"/>
        <repeat nodeset="/data/my_page/my_repeat" jr:count=" /data/my_page/chw_count ">
          <input ref="/data/my_page/my_repeat/repeated_note">
            <label ref="jr:itext('/data/my_page/my_repeat/repeated_note:label')"/>
          </input>
        </repeat>
      </group>
    </group>
  </h:body>
</h:html>