<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:cht="https://communityhealthtoolkit.org">
  <h:head>
    <h:title>Mute Contact</h:title>
    <model odk:xforms-version="1.0.0">
      <itext>
        <translation lang="English (en)">
          <text id="/data/inputs:label">
            <value></value>
          </text>
          <text id="/data/inputs/source:label">
            <value>Source</value>
          </text>
          <text id="/data/inputs/contact:label">
            <value>Contact</value>
          </text>
          <text id="/data/inputs/contact/_id:label">
            <value>Which contact do you want to mute?</value>
          </text>
          <text id="/data/submit:label">
            <value>Are you sure you want to mute this contact?</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="mute_contact" version="20250214130942" prefix="J1!mute_contact!" delimiter="#">
          <inputs>
            <meta>
              <location>
                <lat></lat>
                <long></long>
                <error></error>
                <message></message>
              </location>
            </meta>
            <source>user</source>
            <contact>
              <_id></_id>
            </contact>
          </inputs>
          <patient_uuid></patient_uuid>
          <submit></submit>
          <meta tag="hidden">
            <instanceID></instanceID>
          </meta>
        </data>
      </instance>
      <instance id="contact-summary"></instance>
      <instance id="user-contact-summary"></instance>
      <bind nodeset="/data/inputs" relevant="./source = 'user'"></bind>
      <bind nodeset="/data/inputs/source" type="string"></bind>
      <bind nodeset="/data/inputs/contact/_id" type="string" required="true()"></bind>
      <bind nodeset="/data/patient_uuid" type="string" calculate="../inputs/contact/_id"></bind>
      <bind nodeset="/data/submit" readonly="true()" type="string"></bind>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"></bind>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/inputs">
      <label ref="jr:itext('/data/inputs:label')"></label>
      <input ref="/data/inputs/source" appearance="hidden">
        <label ref="jr:itext('/data/inputs/source:label')"></label>
      </input>
      <group ref="/data/inputs/contact">
        <label ref="jr:itext('/data/inputs/contact:label')"></label>
        <input ref="/data/inputs/contact/_id" appearance="select-contact">
          <label ref="jr:itext('/data/inputs/contact/_id:label')"></label>
        </input>
      </group>
    </group>
    <input ref="/data/submit">
      <label ref="jr:itext('/data/submit:label')"></label>
    </input>
  </h:body>
</h:html>